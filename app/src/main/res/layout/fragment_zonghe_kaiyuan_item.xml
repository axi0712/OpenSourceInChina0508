<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:id="@+id/fragment_zonghe_kaiyuan_item_zong"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="155dp">

    <ImageView

        android:id="@+id/fragment_zonghe_kaiyuan_item_imageview"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_label_today"
        />
    <TextView
        android:padding="5dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/fragment_zonghe_kaiyuan_item_imageview"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vdsbdvbs"
        android:textSize="20sp"
        android:id="@+id/fragment_zonghe_kaiyuan_item_text_title"
        />
    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_zonghe_kaiyuan_item_text_title"
        android:text="buidsbv"
        android:textColor="#b1b1b1"
        android:textSize="18sp"
        android:id="@+id/fragment_zonghe_kaiyuan_item_text_message"
        />
   <TextView
       android:padding="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/fragment_zonghe_kaiyuan_item_text_aite"
       android:text="/@"
       android:textColor="#b1b1b1"
       android:layout_below="@id/fragment_zonghe_kaiyuan_item_text_message"
       />

    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_zonghe_kaiyuan_item_text_author"
        android:text="vbdsiv"
        android:textColor="#b1b1b1"
        android:layout_alignBaseline="@+id/fragment_zonghe_kaiyuan_item_text_aite"
        android:layout_alignBottom="@+id/fragment_zonghe_kaiyuan_item_text_aite"
        android:layout_toRightOf="@+id/fragment_zonghe_kaiyuan_item_text_aite"
        android:layout_toEndOf="@+id/fragment_zonghe_kaiyuan_item_text_aite" />
    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-05-09 20:03:00"
        android:textColor="#b1b1b1"
        android:id="@+id/fragment_zonghe_kaiyuan_item_text_time"
        android:layout_alignBaseline="@+id/fragment_zonghe_kaiyuan_item_text_author"
        android:layout_alignBottom="@+id/fragment_zonghe_kaiyuan_item_text_author"
        android:layout_toRightOf="@+id/fragment_zonghe_kaiyuan_item_text_author"
        android:layout_toEndOf="@+id/fragment_zonghe_kaiyuan_item_text_author"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fragment_zonghe_kaiyuan_item_text_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/main_news_er"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_comment_30" />

        <TextView
            android:id="@+id/fragment_zonghe_kaiyuan_item_count_pinlun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/main_news_er"
            android:text="0"
            android:textColor="#000000" />
    </LinearLayout>


</RelativeLayout>